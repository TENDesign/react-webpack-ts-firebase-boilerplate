{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/",
        "sourceMap": true,
        "declaration": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es2015",
        "typeRoots": [
            "node_modules/@types"
        ],
        "jsx": "react",
        "noImplicitAny": true,
        "lib": [
            "esnext",
            "dom"
        ]
    },
    "exclude": [
        "node_modules"
    ]
}
